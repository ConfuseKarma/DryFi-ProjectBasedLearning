@model List<Newtonsoft.Json.Linq.JObject>
@using Newtonsoft.Json.Linq
@using Newtonsoft.Json

<h2>Gráfico de Temperatura</h2>

<canvas id="myChart" width="400" height="200"></canvas>

@section Scripts {
    <script>
        function renderChart(data) {
            console.log("Função renderChart chamada"); // Log para depuração
            var labels = data.map(function (item) {
                return item.recvTime;
            });
            var dataValues = data.map(function (item) {
                return item.attrValue;
            });

            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Temperatura ao longo do tempo',
                        data: dataValues,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: false
                        }
                    }
                }
            });
        }

        $(document).ready(function () {
            var dataFromServer = @Html.Raw(JsonConvert.SerializeObject(Model));
            renderChart(dataFromServer);
        });
    </script>
}

