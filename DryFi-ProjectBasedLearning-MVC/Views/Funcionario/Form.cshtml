@using DryFi_ProjectBasedLearning_MVC.Enums
@model FuncionarioViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container content-fluid mt-5 row-gap-5">
    <div class="row mt-5 gx-3"> 
        <div class="col-md-6">
            @if (@ViewBag.Operacao == "I"){
                <h1 class="display-2 fw-semibold mb-5">New <span class="text-info">Guardian</span></h1>
            }
            else{
                <h1 class="display-2 fw-semibold mb-5">Update <span class="text-info">Guardian</span></h1>
            }
            <div class="d-flex align-content-center flex-wrap">
                <form asp-action="save" class="needs-validation" enctype="multipart/form-data" novalidate>
                    <div class="row g-3">
                        <div class="col-md-7 mb-3">
                            <input value="@ViewBag.Operacao" type="hidden" name="Operacao">
                            <input asp-for="Id" class="form-control" id="id" hidden>
                            <label for="Foto" class="form-label">Photo</label>
                            <input type="file" name="Imagem" id="Imagem" onchange="exibirImagem()" class="btn btn-secondary">
                        </div>
                        <div class="col-md-5 mb-3 d-flex justify-content-center align-items-center">
                            <img id="imgPreview" src="data:image/jpeg;base64,@Model.ImagemEmBase64" class="img-responsive"
                                 width="100">
                        </div>
                        <div class="col-md-6">
                            <label for="Nome" class="form-label">Name</label>
                            <input asp-for="Nome" type="text" class="form-control" id="Nome" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="Email" class="form-label">E-mail</label>
                            <div class="input-group has-validation">
                                <span class="input-group-text" id="spanEmail">&#x00040;</span>
                                <input asp-for="Email" type="text" class="form-control" id="Email" aria-describedby="inputGroupPrepend" required>
                                <div class="invalid-feedback">
                                    Please, inform the email for contact.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="Cargo" class="form-label">Position</label>
                            <select asp-for="CargoId" asp-items="Html.GetEnumSelectList<CargoEnum>()" class="form-select" id="Cargo" required>
                                <option selected disabled value="">Choose...</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a valid position.
                            </div>
                        </div>
                        <div class="col-md-7 mb-3">
                            <button type="submit" value="Salvar dados" class="rounded-pill btn btn-lg btn-info mr-3">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6 pt-3 d-flex justify-content-center align-items-center">
            <img src="~/lib/img/registerImage.svg" style="max-width: 100%; height: auto;" />
        </div>
    </div>
</div>
<script>
    function exibirImagem() {
        var oFReader = new FileReader();
        oFReader.readAsDataURL(document.getElementById("Imagem").files[0]);
        oFReader.onload = function (oFREvent) {
            document.getElementById("imgPreview").src = oFREvent.target.result;
        };
    }
</script>