@using DryFi_ProjectBasedLearning_MVC.Enums
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <h2 class="text-white">Guardians</h2>
    <br />
    <a type="button" class="btn btn-info" href="/Funcionario/FuncRegistro">New Guardian</a>
    <br />
</div>
<br />
<fieldset id="areaFiltro" class="form-group">
    <legend>Search your Guardians</legend>
    <div class="row">
        <div class="col-lg-4">
            Name<br />
            <input type="text" id="nome" class="form-control" />
        </div>
        <div class="col-lg-3">
            Position <br />
            <select asp-items="Html.GetEnumSelectList<CargoEnum>()" class="form-select" id="cargo" required>
                <option selected disabled value="">Choose...</option>
            </select>
        </div>
        <div class="col-lg-1">
            <br />
            <div class="btn-group" role="group" aria-label="Button group">
                <input type="button" id="btnFiltro" class="btn btn-success text-center" value="Apply" style="width: 100%; border-radius: 8%; margin-right: 10%;"
                       onclick="aplicaFiltroConsultaAvancadaFuncionario()" />
                <input type="button" id="btnClear" class="btn btn-danger text-center" value="Clear" style="width: 100%; border-radius: 8%;"
                       onclick="limparFiltros()" />
            </div>
        </div>
    </div>
</fieldset>
<div id="resultadoConsulta" class="table-responsive">
</div>

<script>
    function apagarFunc(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'delete?id=' + id;
    }

    function limparFiltros() {
        document.getElementById('nome').value = '';
        document.getElementById('cargo').value = '';
    }
</script>
