@model List<ClienteViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <h2 class="text-white">Clientes</h2>
    <br />
    <a type="button" class="btn btn-info" href="/Cliente/Form">Novo Cliente</a>
    <br />
</div>
<br />
<fieldset id="areaFiltro" class="form-group">
    <legend>Buscar Clientes</legend>
    <div class="row">
        <div class="col-lg-4">
            Nome<br />
            <input type="text" id="nome" class="form-control" />
        </div>
        <div class="col-lg-3">
            CNPJ <br />
            <input type="text" id="cnpj" class="form-control" />
        </div>
        <div class="col-lg-3">
            Email <br />
            <input type="text" id="email" class="form-control" />
        </div>
        <div class="col-lg-1">
            <br />
            <input type="button" id="btnFiltro" class="btn btn-success" value="Aplicar"
                   onclick="aplicaFiltroConsultaAvancada()" />
        </div>
    </div>
</fieldset>
<div id="resultadoConsulta" class="table-responsive">
</div>
<div class="text-center gap-3">
    <table id="clienteTable" class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Ações</th>
                <th scope="col">Nome</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td class="col-md-5">
                        <a href="/home/Edit?id=@cliente.Id" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a href="javascript:apagarCliente(@cliente.Id)" class="btn btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                        <a href="/home/Listar?id=@cliente.Id" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i></a>
                    </td>
                    <td class="col-md-2">@cliente.NomeCliente</td>
                    <td class="col-md-2">@cliente.Cnpj</td>
                    <td class="col-md-2">@cliente.Email</td>
                    <td class="col-md-2">@cliente.Telefone</td>
                </tr>
            }
        </tbody>
    </table>
</div>
