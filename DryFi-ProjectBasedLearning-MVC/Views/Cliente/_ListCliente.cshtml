@model List<ClienteViewModel>

<br>
<div class="text-center gap-3">
    <table id="clienteTable" class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Actions</th>
                <th scope="col">Name</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Email</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Type of Client</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr class="align-middle">
                    <td style="width: 15%;">
                        <div class="btn-group-vertical" style="width: 100%;">
                            <a href="/Cliente/Edit?id=@Model[i].Id" class="btn btn-primary mb-2" style="width: 100%;">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button type="button" onclick="apagarCliente(@Model[i].Id)" class="btn btn-danger" style="width: 100%;">
                                <i class="fas fa-trash" aria-hidden="true"></i> Delete
                            </button>
                        </div>
                    </td>
                    <td class="col-md-2">@Model[i].NomeCliente</td>
                    <td class="col-md-2">@Model[i].Cnpj</td>
                    <td class="col-md-2">@Model[i].Email</td>
                    <td class="col-md-2">@Model[i].Telefone</td>
                    <td class="col-md-2">@Model[i].DescricaoTipoCliente</td>
                </tr>
            }
        </tbody>
    </table>
</div>
