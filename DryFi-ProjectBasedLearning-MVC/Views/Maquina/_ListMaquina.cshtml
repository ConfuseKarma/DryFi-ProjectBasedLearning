@model List<MaquinaViewModel>

<br>
<div class="text-center gap-3">
    <table id="maquinaTable" class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Actions</th>
                <th scope="col">Machine Status</th>
                <th scope="col">Client ID</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr class="align-middle">
                    <td style="width: 15%;">
                        <div class="btn-group-vertical" style="width: 100%;">
                            <a href="/Maquina/Edit?id=@Model[i].Id" class="btn btn-primary mb-2" style="width: 100%;">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button type="button" onclick="apagarMaquina(@Model[i].Id)" class="btn btn-danger" style="width: 100%;">
                                <i class="fas fa-trash" aria-hidden="true"></i> Delete
                            </button>
                        </div>
                    </td>
                    <td class="col-md-2">@Model[i].MaqStatus</td>
                    <td class="col-md-2">@Model[i].IdCliente</td>
                </tr>
            }
        </tbody>
    </table>
</div>
